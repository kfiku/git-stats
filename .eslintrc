{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "plugins": [
    "fp"
  ],
  "extends": [
    "eslint:recommended",
    "standard",
    "plugin:fp/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "fp/no-mutation": [
      "error",
      {
        "commonjs": true
      }
    ]
  }
}
